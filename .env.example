# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/potentia_ludi

# ============================================
# EXTERNAL APIS
# ============================================

# Alchemy API - for multi-chain balance & NFT data
# Get your key at: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Moralis API - fallback for balance data
# Get your key at: https://admin.moralis.io/
MORALIS_API_KEY=your_moralis_api_key_here

# 0x API v2 - for swap quotes
# Get your key at: https://0x.org/docs/introduction/getting-started
OX_API_KEY=your_0x_api_key_here

# Tenderly - for transaction simulation
# Get your key at: https://dashboard.tenderly.co/
TENDERLY_ACCESS_KEY=your_tenderly_access_key_here

# Blocknative - for gas price estimates
# Get your key at: https://www.blocknative.com/
BLOCKNATIVE_API_KEY=your_blocknative_api_key_here

# ============================================
# SERVER
# ============================================

# Server port (default: 3001)
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Session secret for cookie signing
SESSION_SECRET=change_this_to_a_random_string_in_production

# ============================================
# REDIS (Optional - for production)
# ============================================

# Redis URL for nonce storage and session management
# REDIS_URL=redis://localhost:6379

