# Environment Configuration for Conversational Web3 Wallet Hub
# 
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ============================================================
# OpenAI Configuration
# ============================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================================
# Database Configuration
# ============================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/potentia_ludi

# ============================================================
# Redis Configuration
# ============================================================
# Redis connection URL
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================================
# Web3 RPC Endpoints
# ============================================================
# Get free RPC endpoints from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://infura.io/
# - QuickNode: https://www.quicknode.com/

# Ethereum Mainnet
RPC_URL_ETHEREUM=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Polygon
RPC_URL_POLYGON=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# BSC (Binance Smart Chain)
RPC_URL_BSC=https://bsc-dataseed.binance.org/

# Arbitrum
RPC_URL_ARBITRUM=https://arb-mainnet.g.alchemy.com/v2/your-api-key

# Optimism
RPC_URL_OPTIMISM=https://opt-mainnet.g.alchemy.com/v2/your-api-key

# Base
RPC_URL_BASE=https://base-mainnet.g.alchemy.com/v2/your-api-key

# ============================================================
# Coinbase Integration
# ============================================================
# Get API key from https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_API_KEY=your-coinbase-api-key

# ============================================================
# DEX Aggregator APIs
# ============================================================
# 1inch API (https://portal.1inch.dev/)
ONEINCH_API_KEY=your-1inch-api-key

# Paraswap API (https://developers.paraswap.network/)
PARASWAP_API_KEY=your-paraswap-api-key

# 0x API (https://0x.org/docs/api)
ZEROX_API_KEY=your-0x-api-key

# ============================================================
# Price Feed APIs
# ============================================================
# CoinGecko API (https://www.coingecko.com/en/api)
COINGECKO_API_KEY=your-coingecko-api-key

# CoinMarketCap API (https://coinmarketcap.com/api/)
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# ============================================================
# Bridge Provider APIs
# ============================================================
# LayerZero (https://layerzero.network/)
LAYERZERO_API_KEY=your-layerzero-api-key

# Stargate (https://stargate.finance/)
STARGATE_API_KEY=your-stargate-api-key

# ============================================================
# Security & Authentication
# ============================================================
# JWT secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-here

# ============================================================
# Application Configuration
# ============================================================
# Node environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================================
# Rate Limiting
# ============================================================
# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Maximum transactions per hour per user
TRANSACTION_LIMIT_PER_HOUR=10

# ============================================================
# Feature Flags
# ============================================================
# Enable conversational AI features
FEATURE_CONVERSATIONAL_AI=true

# Enable bridge functionality
FEATURE_BRIDGE=true

# Enable swap functionality
FEATURE_SWAP=true

# Enable auto-confirm for small transactions (USD)
AUTO_CONFIRM_THRESHOLD_USD=10

# ============================================================
# Monitoring & Logging
# ============================================================
# Sentry DSN for error tracking (https://sentry.io/)
SENTRY_DSN=your-sentry-dsn

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================
# Email Configuration (Optional)
# ============================================================
# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================
# Development/Testing
# ============================================================
# Use testnet chains
USE_TESTNET=false

# Test wallet address (for demo mode)
TEST_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8D7De2665B81b5fE4
