# Conversational Web3 Wallet Hub - Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# OpenAI Configuration
# ======================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...
OPENAI_ORG_ID=org-...

# Model selection (gpt-4-turbo recommended for best results)
OPENAI_MODEL=gpt-4-turbo

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/potentia_ludi

# Database pool settings
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000

# ======================
# Redis Configuration
# ======================
# Redis connection URL
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Redis settings
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3

# ======================
# Blockchain RPC Providers
# ======================
# Alchemy (Primary provider)
# Get API keys from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY_MAINNET=
ALCHEMY_API_KEY_POLYGON=
ALCHEMY_API_KEY_ARBITRUM=
ALCHEMY_API_KEY_OPTIMISM=
ALCHEMY_API_KEY_BASE=

# Infura (Fallback provider)
# Get API keys from: https://infura.io/
INFURA_API_KEY=
INFURA_API_SECRET=

# QuickNode (Optional additional provider)
QUICKNODE_ENDPOINT_MAINNET=
QUICKNODE_ENDPOINT_POLYGON=

# ======================
# DEX Aggregator APIs
# ======================
# 0x Protocol API
# Get API key from: https://0x.org/
ZEROX_API_KEY=

# 1inch API (Optional fallback)
ONEINCH_API_KEY=

# ======================
# Bridge Providers
# ======================
# LayerZero
LAYERZERO_API_KEY=

# Axelar
AXELAR_API_KEY=

# ======================
# NFT & Token Data APIs
# ======================
# Alchemy NFT API (included in Alchemy API key above)

# Moralis (Optional)
MORALIS_API_KEY=

# CoinGecko API (for token prices)
COINGECKO_API_KEY=

# ======================
# Transaction Simulation
# ======================
# Tenderly (for transaction simulation)
# Get API key from: https://dashboard.tenderly.co/
TENDERLY_API_KEY=
TENDERLY_PROJECT_ID=
TENDERLY_USER=

# ======================
# Authentication
# ======================
# Sign-In with Ethereum (SIWE)
# Generate a secure random string for session encryption
SESSION_SECRET=change-this-to-a-random-string-min-32-chars

# Session duration (in seconds)
SESSION_MAX_AGE=86400

# JWT secret for API authentication
JWT_SECRET=change-this-to-a-random-string-min-32-chars

# ======================
# Application Settings
# ======================
# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supported chains (comma-separated chain IDs)
NEXT_PUBLIC_SUPPORTED_CHAINS=1,137,56,42161,10,8453

# Default chain
NEXT_PUBLIC_DEFAULT_CHAIN=137

# ======================
# Rate Limiting
# ======================
# Max intents per minute per user
RATE_LIMIT_INTENTS=60

# Max transactions per minute per user
RATE_LIMIT_TRANSACTIONS=10

# ======================
# Safety & Risk Settings
# ======================
# Max slippage allowed (basis points, 500 = 5%)
MAX_SLIPPAGE_BPS=500

# Price impact warning threshold (percentage)
PRICE_IMPACT_WARNING=3

# Transaction simulation required
REQUIRE_SIMULATION=true

# ======================
# Monitoring & Analytics
# ======================
# Sentry (Error tracking)
SENTRY_DSN=

# PostHog (Analytics)
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# ======================
# Development & Testing
# ======================
# Enable debug logging
DEBUG=false

# Mock mode (for testing without real blockchain calls)
MOCK_MODE=false

# Test wallet addresses (for demos)
TEST_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8D7De2665B81b5fE4

# ======================
# Coinbase Developer Platform (for app/page.tsx)
# ======================
# Get API key from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_API_KEY=

# ======================
# Webhook Configuration
# ======================
# Secret key for webhook signature verification
# Generate a secure random string for HMAC signature validation (minimum 32 characters)
# Example generation: openssl rand -hex 32
WEBHOOK_SECRET=your-secure-random-webhook-secret-key-min-32-chars-recommended
